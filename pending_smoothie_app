import streamlit as st
import pandas as pd
from snowflake.snowpark.context import get_active_session
from snowflake.snowpark.functions import col, when_matched

st.title(f"Customize Your Smoothie! :cup_with_straw:")
st.write("Choose the fruits you want in your custom Smoothie!")

session = get_active_session()

# Get pending orders as Pandas DataFrame
pending_orders = session.table("smoothies.public.orders").filter(col("ORDER_FILLED")==0).to_pandas()

if not pending_orders.empty:
    editable_df = st.data_editor(pending_orders)
    submitted = st.button('Submit')
    if submitted:
        og_dataset = session.table("smoothies.public.orders")
        edited_dataset = session.create_dataframe(editable_df)

        try:
            og_dataset.merge(
                edited_dataset,
                (og_dataset['ORDER_UID'] == edited_dataset['ORDER_UID']),
                [when_matched().update({'ORDER_FILLED': edited_dataset['ORDER_FILLED']})]
            )
            st.success('Orders updated', icon='üëç')
        except Exception as e:
            st.error(f"Something went wrong: {e}")
else:
    st.success('There are no pending orders right now')
